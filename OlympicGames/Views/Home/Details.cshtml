@model CountryViewModel
@{
    ViewData["Title"] = "Olympic Details";
}

<h2 class="text-center p-2">Team Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/flags/@Model.Country.FlagImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport: @Model.Country.Sport.Name</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                    <a asp-action="Index" class="btn btn-primary"  
                       asp-route-activeGame="@Model.ActiveGame"
                       asp-route-activeSport="@Model.ActiveSport">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">Add to Favorites</button>
                    <input type="hidden" asp-for="Country.CountryId"/>
                </form>
            </li>
        </ul>
    </div>
</div>