@model CountryListViewModel
@{
    ViewData["Title"] = "Country GameId and Sports";
}

<div class="row">
<div class="col-sm-3">
<h3 class="mt-3">Game</h3>
<div class="list-group">
    @foreach (Game game in Model.Games)
    {
        <a asp-action="Index"
           asp-route-activeGame="@game.GameId"
           asp-route-activeSport="@Model.ActiveSport"
           class="list-group-item 
                       @Model.CheckActiveGame(game.GameId)">
            @game.Name
        </a>
    }
</div>
<h3 class="mt-3">Sport</h3>
<div class="list-group">
    @foreach (Sport sport in Model.Sports)
    {
    
    <a asp-action="Index"
       asp-route-activeGame="@Model.ActiveGame"
       asp-route-activeSport="@sport.SportId"
       class="list-group-item 
                       @Model.CheckActiveSport(sport.SportId)">
        @sport.Name
    </a>
    }
</div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">

                    <a asp-action="Details" asp-route-id="@country.CountryId">
                        <img src="~/flags/@country.FlagImage" alt="@country.Name"
                        title="@country.Name | @country.Game.Name @country.Sport.Name" />
                    </a>
                    </li>
            }
        </ul>
    </div>
  </div>